<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketsFragment"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textColor="#000000"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Area:"
            android:layout_marginRight="15dp"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/spinner_area"
            app:layout_constraintTop_toTopOf="parent"/>
        <Spinner
            android:background="@drawable/spinner_bg"
            android:outlineAmbientShadowColor="#000000"
            android:outlineSpotShadowColor="#000000"
            android:id="@+id/spinner_area"
            android:layout_width="250dp"
            android:layout_height="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <RadioGroup
        android:checkedButton="@id/radio_activev"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_activev"
            android:focusedByDefault="true"
            android:layout_marginRight="21dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activos"
            android:buttonTint="#000000"/>
        <RadioButton
            android:layout_marginRight="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solucionado"
            android:textColor="#000000"
            android:buttonTint="#000000"/>
        <RadioButton
            android:layout_marginRight="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cerrado"
            android:textColor="#000000"
            android:buttonTint="#000000"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:buttonTint="#000000"
            android:text="Todos"
            android:textColor="#000000" />
    </RadioGroup>

</LinearLayout>